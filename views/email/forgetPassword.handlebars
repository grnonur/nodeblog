<!--==========================
    INSIDE HERO SECTION Section
============================-->	
<section class="page-image page-image-contact md-padding">
    <h1 class="text-white text-center">Reset Password</h1>
</section>
    
    <!--==========================
    Contact Section
============================-->
<section id="contact" class="md-padding">
	<div class="container">

			<div class="row text-center">
				<div class="col-md-4 offset-md-4">
					<div class="section-header">
						<h2 class="title">
							Hesap Kurtarma
						</h2>
					</div>
				</div>
			</div>

		<div class="row">
			<div class="col-lg-12">
				
				<form action="/users/forgetPassword" method="POST">
					<div class="row">
						<div class="offset-2 col-md-8">
								{{#if sessionFlash.message}}
									<div class="{{sessionFlash.type}}">
										{{sessionFlash.message}}
									</div>
								{{/if}}
							<div class="form-group">
								<input class="form-control" name="email" type="email" placeholder="E-Mail" required="required" data-validation-required-message="Please enter your email address.">
								<p class="help-block text-danger"></p>
							</div>
						</div>

						<div class="clearfix"></div>
						<div class="col-lg-12 text-center">
							<div id="success"></div>
							<button class="main-btn" type="submit">Kurtar</button>
						</div>
					</div>
				</form>
				
			</div>
		</div>

	</div>
</section>