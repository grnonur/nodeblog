<div class="widget">
    <div class="widget-search">
        <form action="/posts/search" method="GET">
            <input class="search-input form-control" type="text" name="look" placeholder="Ara...">
            <button class="search-btn" type="submit"><i class="fas fa-search"></i></button>
        </form>
    </div>
</div>


<div class="widget">
    <h3 class="mb-3">Kategoriler</h3>
    <div class="widget-category">
        {{#each categories}}
        <a href="/posts/category/{{_id}}">{{name}}<span>({{num_of_posts}})</span></a>
        {{/each}}
    </div>
</div>


<div class="widget">
    <h3 class="mb-3">Son GÃ¶nderiler</h3>

    {{#each (limit posts 3)}}
    <!-- single post -->
    <div class="widget-post">
        <a href="/posts/{{_id}}">
            <img class="img-fluid" src="{{post_image}}">{{truncate title 30}}
        </a>
        <ul class="blog-meta">
            <li>{{generateDate date 'DD MM YYYY'}}</li>
        </ul>
    </div>
    {{/each}}
    <!-- /single post -->
</div>