<!--==========================
    INSIDE HERO SECTION Section
============================-->	
<section class="page-image page-image-contact md-padding">
    <h1 class="text-white text-center">Gönderi Oluştur</h1>
</section>
    
    <!--==========================
    Contact Section
============================-->
<section id="contact" class="md-padding">
	<div class="container">

			<div class="row text-center">
				<div class="col-md-4 offset-md-4">
					<div class="section-header">
						<h2 class="title">Oluştur</h2>
					</div>
				</div>
			</div>

		<div class="row">
			<div class="col-lg-12">
				<form action="/posts/test" method="POST" enctype="multipart/form-data">
					<div class="row">
						<div class="offset-2 col-md-8">
							{{#if sessionFlash.message}}
								<div class="{{sessionFlash.type}}">{{sessionFlash.message}}</div>
							{{/if}}
							<div class="form-group">
								<input class="form-control" name="title" type="text" placeholder="Başlık" required="required" data-validation-required-message="Bir başlık girin.">
								<p class="help-block text-danger"></p>
							</div>
							<div class="form-group">
								<textarea class="form-control" name="content" placeholder="Içerik" required="required" data-validation-required-message="Içerik oluşturun."></textarea>
								<p class="help-block text-danger"></p>
							</div>
							<div class="form-group">
								<select class="form-control" name="category" required="required" data-validation-required-message="Bir kategori seçin.">
									{{#each categories}}
									<option value="{{_id}}">{{name}}</option>
									{{/each}}
								</select>
								<p class="help-block text-danger"></p>
							</div>
							<div class="form-group">
								<input class="form-control" name="post_image" type="file" accept=".png, .jpg, .jpeg" required="required" data-validation-required-message="Bir görsel seçin.">
								<p class="help-block text-danger"></p>
							</div>
						</div>
							
						</div>
						<div class="clearfix"></div>
						<div class="col-lg-12 text-center">
							<div id="success"></div>
							<button class="btn btn-outline-warning" type="submit">Oluştur</button>
						</div>
					</div>
				</form>
			</div>
		</div>

	</div>
</section>

<script>
	CKEDITOR.replace('content');
</script>